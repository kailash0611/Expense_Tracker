<ejs-sidebar id="sidebar" enableDock dockSize="100px"
              enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
            <img class="profile-picture" src="~/images/logo.png" />
            <div class="titles d-flex flex-column ps-3">
                <h3 class="mb-0">Dhan Tracklab</h3>
            </div>
        </div>

        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                 ></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });

</script>
