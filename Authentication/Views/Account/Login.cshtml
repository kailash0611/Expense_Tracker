@using Authentication.ViewModel;
@{
    Layout = null;
    ViewData["AccountPage"] = true;
}
@model LoginViewModel;
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #1a222b;
            color: #ffffff;
        }

        .form-container {
            background: border-box;
            border-radius: 10px;
            padding: 20px;
        }

            .form-container h1 {
                color: #ffffff;
            }
    </style>
</head>

<body>

    <div class="container d-flex justify-content-center align-items-center vh-90" style="height: 600px; width: 900px">

        <div class="col-md-6 form-container widget p-5" style="background-color:#212b36" >

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <span>@TempData["Error"]</span>
                </div>
            }
            <h1>Login Form</h1>
            <form  method="post">
                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group mt-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group mt-3">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                        <label class="custom-control-label" asp-for="RememberMe">Remember me</label>
                    </div>
                    <div class="bottom-link form-group mt-3">
                        New User?
                        <a href="/Account/Register" id="register-link">Register</a>
                    </div>
                    <div class="form-group mt-4">
                        <input class="btn btn-outline-success float right" type="submit" value="Login" />
                    </div>
                </div>
            </form>

        </div>
    </div>

</body>

</html>




