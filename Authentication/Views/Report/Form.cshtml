@using Authentication.ViewModels;
@model ReportViewModel;
@{
    ViewData["PageTitle"] = "Generate Report";
}
<div class="container mt-7 ">
    <div class="row justify-content-center">
        <div class="col-lg-6 mb-3">
            <div class="card p-4 widget" style="background-color:#212b36" >
                <h5 class="text-center mb-4">Enter the Number of Days</h5>
                <form method="post">
                    <div class="form-group">
                        <input asp-for="Days" class="form-control beautiful-input" type="number" min="1" placeholder="Enter only Days in number e.g., 30" />
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
